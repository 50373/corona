@model IEnumerable<Project.Models.Billing>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BillingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BillingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BillingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BillingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
